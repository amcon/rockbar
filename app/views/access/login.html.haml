- @page_title = "Admin Login"

.div.login
	= form_tag(access_attempt_login_path, method: :post) do
		%table 
			%tr 
				%td 
					= label_tag(:email)
				%td 
					= text_field_tag(:email, params[:email])
			%tr 
				%td 
					= label_tag(:password)
				%td 
					= password_field_tag(:password)
			%tr 
				%td 
					&nbsp;
				%td 
					= submit_tag("LOG IN")	
	= link_to("Create an Admin Account", new_admin_user_path)										