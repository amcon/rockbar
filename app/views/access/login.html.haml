- @page_title = "Admin Login"

.login-page
	%h1 Admin Login

	.div.login
		= form_tag(access_attempt_login_path, method: :post) do
			= label_tag(:email)
			= text_field_tag(:email, params[:email])
			= label_tag(:password)
			= password_field_tag(:password)
			&nbsp;
			= submit_tag("LOG IN", class: 'btn')	
		= link_to("Create an Admin Account", new_admin_user_path)										