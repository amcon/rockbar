- @page_title = "Calendar"

.calendar-page
	%h1 Calendar

	= month_calendar do |date|
		= date.day

		- @calendar_events.each do |event|
			- if event.date == date
				%div
					%h5
						= link_to truncate(event.title, length: 25), event_path(event.id, time: event.date)
					%p
						= "#{event.start_time.strftime("%-I%p")} - #{event.end_time.strftime("%-I%p")}"	

	- if current_user
		%p.mt-5
			= link_to("+ Add New Event", new_event_path, class: 'btn-white')
