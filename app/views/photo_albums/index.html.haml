- @page_title = "Gallery"

.gallery-page
	%h1 Gallery

	.gallery
		- @albums.each do |album|
			.album
				= link_to photo_album_path(album) do
					.image-overlay
						.cover-photo
						%span
							%h4
								= album.title
							%p
								= album.description
				.admin
					= link_to("Edit", edit_photo_album_path(album), class: 'mr-2')
					%p.mr-2 
						|
					= link_to("Delete", delete_photo_album_path(album))
		= link_to new_photo_album_path do	
			%h4.new-album
				+ Add New Album
		.clear			
