- @page_title = "Album: #{@album.title}"

= link_to("<< Back to Gallery", photo_albums_path)

.album-page
	%h2
		= @album.title
	%p	
		= @album.description
	.album-photos
		%h3 Here are the photos from this album:
		- @album.photos.each do |photo|
			%p
				= photo.title	
			%p
				= link_to("Edit", edit_photo_album_photo_path(@album, photo))
				= link_to("Delete", delete_photo_album_photo_path(@album, photo))
		%h2
			= link_to("+ Add a new photo", new_photo_album_photo_path(@album))		
