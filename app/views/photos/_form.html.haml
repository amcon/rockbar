= simple_form_for [@album, @photo] do |f|
	= error_messages_for(f.object)
	= f.input :photo_album_id, as: :hidden, input_html: { value: @album.id }
	= f.input :photo_image_id_cache, as: :hidden
	%label Upload a Photo
	%p#photo_widget_opener
	= f.input :title, as: :string, placeholder: 'Ex. The Lovely Rockbar Staff', required: true
	= f.button :submit